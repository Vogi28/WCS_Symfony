{% extends 'base.html.twig' %}

{% block title %}{{ program.title}}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <a href="{{ path('program_show', {'slug': program.title}) }}"><h1 class="mt-0">{{ program.title }}</h1></a>
    <p>Saison {{ season.id }} - Année {{ season.year}}</p>
    
      <p>{{ season.description }}</p>
    <p>Categorie : {{ program.category.name }}</p>
    <p><h3>Listes des épisodes</h3></p>
    {% for episode in episodes %}
        <a href="{{ path('episode_show', {'id': episode.id}) }}">Episode {{ episode.number }} : {{ episode.title }}</a>
        <details>
            <summary>Synopsis</summary>
            {{ episode.synopsis}}
        </details>
    {% endfor %}
  </div>
</div>
<div class="container">
        <div class="row text-center">
        <a class="col" href="{{ path('season_edit', {'title': program.title, 'id': season.id}) }}">edit</a>
        <p class="col">{{ include('season/_delete_form.html.twig') }}</p>
        </div>
    </div>
<p class="text-center"><a href="{{ path('episode_new') }}" style="font-size:24px; border:1px solid black;border-radius:10px;">Ajouter un episode</a></p>
<p class="text-center" style="font-size:1.7em;"><a href="{{ path('season_index', {'title' : program.title}) }}">Retour au programme</a></p>

{% endblock %}