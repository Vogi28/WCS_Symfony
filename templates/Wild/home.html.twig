{% extends "base.html.twig" %}

{% block welcome %}
    <h1 class="text-center">Welcome Wilders !</h1>
    
    <h4 class="text-center">Voici une petite liste ramdom des séries disponible</h4>
    
 <div class="container">
    <div class="row">
{% for program in programs|slice(0,3) %}
            <div class="card col-4 text-center" style="width:400px">
                <a href="{{ path('program_show', {'slug' : program.title}) }}"><img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }}" height="500px"></a>
                <div class="card-body text-center">
                    <h4 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h4>
                    <p class="card-text">{{ program.summary }}</p>
                    <a href="{{ path('program_show', {'slug' : program.title}) }}" class="btn btn-primary">Voir fiche</a>
                </div>
            </div>
{% endfor %}
    </div>
</div>
<p class="text-center"><a href="/">Actualiser</a></p>
{% endblock %}
