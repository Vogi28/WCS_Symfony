{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>

    <strong>Acteur :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path('actor_show', {'id' : actor.id}) }}">{{ actor.name }}</a></li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
    </ul>

    <p><a href="{{ path ('season_index', {'title' : program.title} )}}">Afficher les saisons</a></p>
    <p>Categorie : {{ program.category.name }}</p>
    <div class="container">
        <div class="row tex-center">
        <a class="col" href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
        <p class="col">{{ include('program/_delete_form.html.twig') }}</p>
        </div>
    </div>
  </div>
</div>
<br>
<h4 class="text-center"><a href="{{ path('program_index') }}">Back to list</a></h4>


{% endblock %}
