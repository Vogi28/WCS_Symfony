{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper text-center">
    <h1>Hello Wilder! ✅</h1> 
    <h4>Voici les catégories disponible</h4>
{% for category in categories %}
    <p> {{ loop.index }}.{{ category.name }}</p>
{% endfor %}
</div>
<div class="text-center">

<p class="text-center">Ajouter une catégorie</p>
{{ form_start(form) }}
    {{ form_row(form.name) }}
    <button class="btn">{{ button_label|default('Add') }}</button>
{{ form_end(form) }}
<div>
{% endblock %}
