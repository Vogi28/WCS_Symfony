{# templates/Wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ category.name }}{% endblock %}

{% block header %}<h1 class="text-center">{{ category.name }}</h1>{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
{% for program in programs %} 
    <div class="card col text-center">
        <a href="{{ path('program_show', {'slug' : program.title})}}"><img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }}" height="500px"></a>
        <div class="card-body text-center">
            <h4 class="card-title">{{ program.id }} / {{ program.title }}</h4>
            <p class="card-text">{{ program.summary }}</p>
            <a href="{{ path('program_show', {'slug' : program.title})}}" class="btn btn-primary">Voir fiche</a>
        </div>
    </div>
{% endfor %}
    </div>
</div>
